<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" spacing="5.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyecto_seguimiento.ConfigurarCuentaController">
   <children>
      <VBox maxHeight="1.7976931348623157E308" prefHeight="604.0" prefWidth="174.0" styleClass="contenedor-botones">
         <children>
            <Button fx:id="btn_salir" mnemonicParsing="false" onAction="#salir" prefHeight="47.0" prefWidth="199.0" styleClass="boton-nuevo" text="Salir" />
            <Button fx:id="btn_edit" mnemonicParsing="false" onAction="#editar" prefHeight="47.0" prefWidth="202.0" styleClass="boton-nuevo" text="Editar cuenta" />
            <Button fx:id="btn_eliminar" mnemonicParsing="false" onAction="#eliminar" prefHeight="47.0" prefWidth="202.0" styleClass="boton-nuevo" text="Eliminar cuenta" />
            <Button fx:id="btn_password" mnemonicParsing="false" onAction="#cambiarPassword" prefHeight="47.0" prefWidth="202.0" styleClass="boton-nuevo" text="Cambiar contraseña" />
            <Button fx:id="btn_guardar" disable="true" mnemonicParsing="false" onAction="#guardar" prefHeight="47.0" prefWidth="204.0" styleClass="boton-nuevo" text="Guardar cambios" />
            <Button fx:id="btn_cancelar" disable="true" mnemonicParsing="false" onAction="#cancelar" prefHeight="47.0" prefWidth="198.0" styleClass="boton-nuevo" text="Cancelar" />
         </children>
      </VBox>
      <VBox alignment="CENTER" stylesheets="@styles.css">
         <children>
            <Pane maxHeight="1.7976931348623157E308" prefHeight="596.0" prefWidth="475.0" styleClass="panel-contenedor" VBox.vgrow="ALWAYS">
               <children>
                  <Label layoutX="99.0" layoutY="57.0" styleClass="titulo-principal" text="Configuración de cuenta" />
                  <Label layoutX="93.0" layoutY="122.0" styleClass="label-formulario" text="Nombre:" />
                  <Label layoutX="93.0" layoutY="203.0" styleClass="label-formulario" text="Apellido:" />
                  <TextField fx:id="txt_nombre" disable="true" layoutX="90.0" layoutY="150.0" prefHeight="23.0" prefWidth="236.0" styleClass="campo-texto" />
                  <TextField fx:id="txt_apellido" disable="true" layoutX="90.0" layoutY="231.0" prefHeight="23.0" prefWidth="236.0" styleClass="campo-texto" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
